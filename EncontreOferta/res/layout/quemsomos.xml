<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/LinearLayoutViagensDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fc652d"
        android:gravity="fill_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tituloQuemSomos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/tituloQuemSomos"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
	
	<ScrollView 
      
      android:id="@+id/scroll" 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/LinearLayoutViagensDescricao">
        
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayoutViagensDescricao"
        
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical" >


        <ImageView
            android:id="@+id/idImagemLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/idDescricaoQuemSomos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idImagemLogo"
            android:textSize="14sp"
            android:layout_marginBottom="30dp" />

    </LinearLayout>
    
    </ScrollView>

</RelativeLayout>
